<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="188.0" prefWidth="403.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sqlmoviedatabase.gui.controller.DeleteMovieSceneController">
   <children>
      <AnchorPane id="AnchorPane" prefHeight="248.0" prefWidth="447.0" styleClass="greyBG" stylesheets="@css/style.css">
         <children>
            <Label layoutX="77.0" layoutY="77.0" prefHeight="58.0" prefWidth="308.0" text="Want to delete selected movie?" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="lbl_title" layoutX="165.0" layoutY="146.0" text="&quot;name of movie&quot;" textFill="WHITE">
               <font>
                  <Font name="Arial" size="16.0" />
               </font>
            </Label>
            <Button fx:id="btn_confirmMovie" layoutX="310.0" layoutY="182.0" mnemonicParsing="false" onAction="#handle_confirmMovie">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@assets/icons8-ok-30.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="btn_cancel" layoutX="365.0" layoutY="182.0" mnemonicParsing="false" onAction="#handle_closeScene">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@assets/icons8-cancel-30.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
